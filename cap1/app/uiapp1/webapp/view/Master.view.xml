<mvc:View controllerName="com.sap.uiapp1.controller.Master"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}" busy="{viewModel>/busy}" class="sapUiSizeCompact">
        <content>
            <Table id="masterTable" items="{path: '/Employees', sorter: { path: 'priority'}}" class="sapUiMediumMarginTop">
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title text="Employees" level="H2"/>
                            <ToolbarSpacer />
                            <Button icon="sap-icon://edit" text="Update (Local)" press=".onUpdateLocal"/>
                            <Button icon="sap-icon://create" text="Create (Local)" press=".onCreateLocal"/>
                            <Button icon="sap-icon://reset" text="Reset Changes" press=".onReset"/>
                            <Button icon="sap-icon://complete" text="Submit Changes" press=".onSubmit"/>
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <infoToolbar>
                    <OverflowToolbar>
                        <Label text="List of active employees"/>
                    </OverflowToolbar>
                </infoToolbar>
                <columns>
                    <Column >
                        <Text text="First Name"></Text>
                    </Column>
                    <Column >
                        <Text text="Last Name"></Text>
                    </Column>
                    <Column >
                        <Text text="Email"></Text>
                    </Column>
                    <Column >
                        <Text text="Priority"></Text>
                    </Column>
                    <Column >
                        <Text text="Delete"></Text>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem >
                        <Input value="{firstName}" editable="false"></Input>
                        <Input value="{lastName}" editable="false"></Input>
                        <Input value="{email}" editable="false"></Input>
                        <Label text="{priority}"></Label>
                        <Button icon="sap-icon://delete" press=".onDeleteLocal"></Button>
                    </ColumnListItem>
                </items>
            </Table>

        </content>
    </Page>
</mvc:View>
